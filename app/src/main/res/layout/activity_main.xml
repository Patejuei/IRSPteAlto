<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="12dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"
            android:text="Formulario de Ingreso de Servicio"
            android:layout_marginBottom="18dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="Número de Servicio:"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correlativo de Servicio"
            android:id="@+id/servNumber"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="Dirección"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dirección del Servicio"
            android:id="@+id/servAddres"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="Esquina:"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Esquina de Referencia"
            android:id="@+id/servReference"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="A Cargo:"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de personal a cargo"
            android:id="@+id/servOBAC"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="Tipo de Servicio"
            />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:id="@+id/comboBoxService"
            android:contentDescription="Servicios"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:text="guardar"
                android:layout_marginVertical="14dp"
                android:id="@+id/SaveButton"
                android:onClick="onClickAgregar"
                android:backgroundTint="@color/GPT_primary"
                />
            <Button
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:text="Modificar"
                android:onClick="onClickModificar"
                android:layout_marginVertical="14dp"
                android:id="@+id/EditButton"
                android:backgroundTint="@color/GPT_primary"
                />
            <Button
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:text="Eliminar"
                android:onClick="onClickEliminar"
                android:layout_marginVertical="14dp"
                android:id="@+id/DeleteButton"
                android:backgroundTint="@color/GPT_primary"
                />
        </LinearLayout>
        <View
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/servicesList"
            android:layout_marginTop="18dp"
            />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>